<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="course_form_view" model="ir.ui.view">
        <field name="name">course.form</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <form string="Course Form">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="About">
                            This is an example of notebooks
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!--Windows actions-->
    <record id="course_list_action" model="ir.actions.act_window">
        <field name="name">Course</field>
        <field name="res_model">academy.course</field>
        <field name="view_mode">tree, form</field>
        <field name="help" type="html">
            <p class="0_view_nocontent_smiling_face">
                Create the first course
            </p>
        </field>
    </record>

    <menuitem id="main_academy_menu"
              name="Open Academy"/>
    <menuitem id="academy_menu"
              name="Open Academy"
              parent="main_academy_menu"/>
    <menuitem id="course_menu"
              name="Course"
              parent="academy_menu"
              action="course_list_action"/>

    <record id="session_form_view" model="ir.ui.view">
        <field name="name">session.form</field>
        <field name="model">academy.session</field>
        <field name="arch" type="xml">
            <form string="Session Form">
                <sheet>
                    <group>
                        <group string="General">
<!--                            <field name="course_id"/>-->
                            <field name="name"/>
<!--                            <field name="course_id"/>-->
                        </group>
                        <group string="Schedule">
                            <field name="start_date"/>
                            <field name="duration"/>
                            <field name="seats"/>
                            <field name="active"/>
                        </group>
                    </group>
<!--                    <label for="attendee_ids"/>-->
<!--                    <field name="attendee_ids" widget="many2manytags"/>-->
                </sheet>
            </form>
        </field>
    </record>

    <!--session tree/list view-->
    <record id="session_tree_view" model="ir.ui.view">
        <field name="name">session.tree</field>
        <field name="model">academy.session</field>
        <field name="arch" type="xml">
            <tree string="Session Tree" decoration-bf="duration&lt;5" decoration-it="duration&gt;15">
                <field name="name"/>
    <!--                <field name="name"/>-->
                <field name="duration" invisible="1"/>
            </tree>
        </field>
    </record>

<!--    windows actions-->
    <record id="session_list_action" model="ir.actions.act_window">
        <field name="name">Session</field>
        <field name="res_model">academy.session</field>
        <field name="view_mode">tree, form, calendar, gantt, graph, pivot, kanban</field>
    </record>

    <menuitem id="session_menu"
              name="Session"
              parent="academy_menu"
              action="session_list_action"/>
</odoo>
